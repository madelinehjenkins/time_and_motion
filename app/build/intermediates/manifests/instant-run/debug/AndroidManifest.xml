<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gheskio.queue"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <permission
        android:name="socket_permission"
        android:label="socket_permission" >
    </permission>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="org.gheskio.queue.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.gheskio.queue.Prefs"
            android:label="Prefs" >
        </activity>
        <activity
            android:name="org.gheskio.queue.Server"
            android:label="@string/title_activity_server" >
        </activity>
        <activity
            android:name="org.gheskio.queue.Qstats"
            android:label="@string/title_activity_qstats" >
        </activity>
        <activity
            android:name="org.gheskio.queue.QrCodeScanner"
            android:label="Please scan code (QR, barcode)" >
        </activity>
        <activity
            android:name="org.gheskio.queue.Item"
            android:label="@string/title_activity_item" >
        </activity>
        <activity
            android:name="org.gheskio.queue.Recorduploader"
            android:label="@string/title_activity_recorduploader" >
        </activity>
        <activity
            android:name="org.gheskio.queue.Helpinfo"
            android:label="@string/title_activity_helpinfo" >
        </activity>
        <activity
            android:name="org.gheskio.queue.Gedit"
            android:label="@string/title_activity_gedit" >
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="org.gheskio.queue.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>